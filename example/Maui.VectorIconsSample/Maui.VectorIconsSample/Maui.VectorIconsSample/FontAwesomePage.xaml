<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
  x:Class="Maui.VectorIconsSample.FontAwesomePage"
  xmlns="http://xamarin.com/schemas/2014/forms"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:antDesign="clr-namespace:Maui.VectorIcons.AntDesign;assembly=Maui.VectorIcons"
  xmlns:fontAwesome="clr-namespace:Maui.VectorIcons.FontAwesome;assembly=Maui.VectorIcons"
  xmlns:fontAwesome5="clr-namespace:Maui.VectorIcons.FontAwesome5;assembly=Maui.VectorIcons"
  xmlns:materialIcons="clr-namespace:Maui.VectorIcons.MaterialIcons;assembly=Maui.VectorIcons">
  <ContentPage.Content>
    <StackLayout>
      <fontAwesome:Icon
        Name="StepForward"
        FontSize="100"
        HorizontalOptions="Center"
        TextColor="Green"
        VerticalOptions="CenterAndExpand" />

      <fontAwesome5:Icon
        Name="Pastafarianism"
        FontSize="100"
        HorizontalOptions="Center"
        TextColor="Green"
        VerticalOptions="CenterAndExpand" />

      <materialIcons:Icon
        Name="Android"
        FontSize="100"
        HorizontalOptions="Center"
        TextColor="Green"
        VerticalOptions="CenterAndExpand" />

      <antDesign:Icon
        Name="Addusergroup"
        FontSize="100"
        HorizontalOptions="Center"
        TextColor="Green"
        VerticalOptions="CenterAndExpand" />
    </StackLayout>
  </ContentPage.Content>
</ContentPage>